<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.sample.ProductDAO">
    <select id="selectAllProduct" resultType="com.example.sample.ProductEntity">
        SELECT * FROM products
    </select>

    <select id="selectProduct" resultType="com.example.sample.ProductEntity">
        SELECT * FROM products WHERE id = #{id}
    </select>

    <insert id="insertProduct">
        INSERT INTO products (title, description) VALUES (#{title}, #{description})
    </insert>

    <delete id="deleteProduct">
        DELETE FROM products WHERE id = #{id}
    </delete>

</mapper>

